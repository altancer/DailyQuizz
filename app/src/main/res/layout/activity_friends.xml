<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Liste mit Freunden -->
    <ListView
        android:id="@+id/friendListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/detailBox"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp" />

    <!-- Detailbox unten -->
    <LinearLayout
        android:id="@+id/detailBox"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="#888888"
        android:padding="16dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/friendNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Freund XYZ"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/friendPointsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="69 Punkte"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:gravity="end" />

        <Button
            android:id="@+id/challengeBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Herausfordern"
            android:layout_marginTop="12dp"
            android:background="#444444"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</RelativeLayout>
